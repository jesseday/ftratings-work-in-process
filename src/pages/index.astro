---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div>
		<h1>Work in process!</h1>
	</div>
</Layout>

<style>
	:root {
    --step--2: clamp(0.7502rem, 0.7883rem + -0.0343vi, 0.7813rem);
    --step--1: clamp(0.9375rem, 0.9094rem + 0.1365vi, 1.0608rem);
    --step-0: clamp(1.125rem, 1.0394rem + 0.4149vi, 1.5rem);
    --step-1: clamp(1.35rem, 1.174rem + 0.8531vi, 2.121rem);
    --step-2: clamp(1.62rem, 1.3053rem + 1.526vi, 2.9991rem);
    --step-3: clamp(1.944rem, 1.4199rem + 2.5413vi, 4.2407rem);
    --step-4: clamp(2.3328rem, 1.4967rem + 4.0537vi, 5rem);
    --step-5: clamp(2.7994rem, 1.5032rem + 6.2844vi, 8.4789rem);
	}
	div {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: start;
		flex-direction: column;

		max-width: 80ch;
		margin: 0 auto;
	}
	h1 {
		font-size: var(--step-4);
		line-height: 1.1;
		margin-block-start: 1em;
		margin-block-end: 0;
	}
	
	p {
		margin-block-start: 1em;
		font-size: var(--step-0);
	}
</style>
